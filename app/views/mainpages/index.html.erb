<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: show_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :widget, ' Click To See Widgets '%>
          </div>
          <%= button_tag 'Go To Visible Widgets', class: 'btn btn-primary btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: search_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :widget, 'Search for widget '%>
            <%= text_field_tag :widget, nil, placeholder: 'Eg. Widget 1', class: 'form-control' %>
          </div>
          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

